{
  "compilerOptions": {
    "lib": [
      "es2016",
      "es2017",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "types/*"
      ]
    },
    "strict": true,
    "jsx": "react",
    "target": "es6",
    "allowJs": true,
    "sourceMap": true,
    "module": "es2015",
    "outDir": "./dist/lib",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
  },
  "exclude": [
    "node_modules", "dist"
  ]
  
  // "include": [
  //   // "./src/**/*"
  // ]
}