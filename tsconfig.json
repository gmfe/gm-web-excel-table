{
  "compilerOptions": {
    "lib": [
      "es2016",
      "es2017",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "types/*"
      ]
    },
    "strict": true,
    "jsx": "react",
    "target": "es6",
    "allowJs": true,
    // "declaration": true,
    "sourceMap": true,
    "module": "es2015",
    "outDir": "./lib",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "es",
    "lib"
  ]
}